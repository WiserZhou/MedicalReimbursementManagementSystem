    <!-- 分页查询人员信息 -->
    <select id="list" resultType="edu.hitwh.homework.pojo.PublicService.Person">
        SELECT * FROM people
        <where>
            <if test="personName != null and personName != ''">
                AND name LIKE CONCAT('%', #{personName}, '%')
            </if>
            <if test="personType != null and personType != ''">
                AND identity = #{personType}
            </if>
        </where>
        ORDER BY people_id DESC
    </select>

